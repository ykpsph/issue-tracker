@model IEnumerable<AddingBootstrapTheme.Models.Department>

@{
    ViewBag.Title = "Index";
    // validating the view. cuz we don't want unloggedin users to see.
    if (Session["Username"] == null)
    {
        Response.Redirect("~/Account/Login", false);
    }
}

<h2>Departments Overview</h2>


<p>
    @Html.ActionLink("Create New", "Create", "Department", new { @class = "btn btn-warning" })
</p>




<body>
    <div class="card shadow mb-4">
        @*<div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-warning">DataTables Example</h6>
        </div>*@
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info" }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-warning" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>